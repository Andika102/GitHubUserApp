<resources>
    <!-- Base application theme. -->
    <style name="Theme.GitHubUser" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/secondaryLightColor</item>
        <item name="colorPrimaryVariant">@color/secondaryColor</item>
        <item name="colorOnPrimary">@android:color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryLightColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!--  Custom  -->
        <item name="customColorValue">@color/blackSoft</item>
        <item name="customColorDrawableValue">@android:color/white</item>
        <item name="colorAccent">@color/secondaryDarkColor</item>
    </style>

    <!--  Card Style  -->
    <style name="Card" parent="Theme.GitHubUser">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">10dp</item>
    </style>
    <!--  Text Style  -->
    <style name="HeadText" parent="Theme.GitHubUser">
        <item name="fontFamily">@font/acme</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SubText" parent="Theme.GitHubUser">
        <item name="android:fontFamily">@font/andika</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="HeadText1" parent="Theme.GitHubUser">
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="SubText1" parent="Theme.GitHubUser">
        <item name="android:fontFamily">@font/andika</item>
        <item name="android:textSize">20sp</item>
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <!--  Toolbar Style -->
    <style name="ExpandText" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">0sp</item>
    </style>
    <style name="ToolbarText" parent="@style/Theme.AppCompat.DayNight.DarkActionBar">
        <item name="titleTextColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--  Splash Screen Style  -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/secondaryColor</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.GitHubUser</item>
    </style>
    <!-- Search View -->
    <style name="SearchView" parent="Widget.AppCompat.SearchView" >
        <item name="android:textSize">24sp</item>
        <item name="iconifiedByDefault">false</item>
        <item name="queryHint">@string/search_text</item>
    </style>
    <!--  Tab Layout Style  -->
    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">?attr/colorOnSecondary</item>
        <item name="tabIndicator">?attr/colorOnPrimary</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">?attr/colorOnPrimary</item>
    </style>
</resources>
